<h1>
  <span class="far fa-plus-square"></span> New Snippet
</h1>

<form method="post" action="./create">
  <div class="form-group">
    <label>Title:</label>
    <input type="text" class="form-control" name="title" placeholder="Enter title here"/>
    <input type="text" class="form-control" name="value" placeholder="Enter a new snippet here" required="required" autofocus="autofocus" />
  </div>
  <button type="submit" class="btn btn-lg btn-primary">Create Snippet</button>
</form>
